@{
    ViewData["Title"] = "Evidence pojištění";
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Pojištěnci</h4>
                <a class="btn btn-primary" asp-area="" asp-controller="Insureds" asp-action="Index">Přehled</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Insureds" asp-action="Create">Přidat</a>

                <form asp-action="Index" method="get">
                    <label>Jméno</label>
                    <input class="form-control" type="text" name="searchFirstName" />

                    <label>Příjmení</label>
                    <input class="form-control" type="text" name="searchLastName" />

                    <label>Město</label>
                    <input class="form-control" type="text" name="searchCity" />

                    <div class="py-2">
                        <button type="submit" class="btn btn-outline-primary" asp-controller="Insureds">Hledat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Pojištění</h4>
                <a class="btn btn-success" asp-area="" asp-controller="Insurances" asp-action="Index">Přehled</a>
                <a class="btn btn-success" asp-area="" asp-controller="Insurances" asp-action="Create">Přidat</a>

                <form asp-action="Index" method="get">
                    <label>Typ pojištění</label>
                    <input class="form-control" type="text" name="searchTypeInsurance" />

                    <label>Jméno pojištěné osoby</label>
                    <input class="form-control" type="text" name="searchInsured" />

                    <div class="py-2">
                        <button type="submit" class="btn btn-outline-primary" asp-controller="Insurances">Hledat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

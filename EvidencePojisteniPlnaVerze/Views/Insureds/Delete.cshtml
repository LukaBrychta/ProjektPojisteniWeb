<h2>a všechny navazující pojištění?</h2>
<hr />
<div class="row">
    <div class="col">
        <img src="~/images/person.png" />
    </div>
    <dl class="col">
        <dt>
            @Html.DisplayNameFor(model => model.Street):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Street)
        <dd />
        <dt>
                @Html.DisplayNameFor(model => model.HouseNumber):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.HouseNumber)
        </dd>
        <dt>
                @Html.DisplayNameFor(model => model.City):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
                @Html.DisplayNameFor(model => model.Zip):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.Zip)
        </dd>
    </dl>
    <dl class="col">
        <dt>
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 py-2">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Odstranit" class="btn btn-danger w-100" />
        </form>
    </div>
</div>

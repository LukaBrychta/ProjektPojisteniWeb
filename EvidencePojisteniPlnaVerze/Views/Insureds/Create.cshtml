@model EvidencePojisteniPlnaVerze.Models.Insured

@{
    ViewData["Title"] = "Create";
}

<h1>Uložení nové pojištěné osoby</h1>

<hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="HouseNumber" class="control-label"></label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-4 py-1">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="row">

            <div class="form-group col-sm-12 col-md-6 col-lg-4 py-2">
                <input type="submit" value="Uložit" class="btn btn-primary" />
            </div>
            </div>
    </div>
        </form>
</div>
@model EvidencePojisteniPlnaVerze.Models.Insured


@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
<hr />



<div class="row">
    <div class="col">
        <img src="~/images/person.png" />
    </div>
    <dl class="col">
        <dt>
            @Html.DisplayNameFor(model => model.Street):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Street)
        <dd />
        <dt>
                @Html.DisplayNameFor(model => model.HouseNumber):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.HouseNumber)
        </dd>
        <dt>
                @Html.DisplayNameFor(model => model.City):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
                @Html.DisplayNameFor(model => model.Zip):
        </dt>
        <dd>
                @Html.DisplayFor(model => model.Zip)
        </dd>
    </dl>
    <dl class="col">
        <dt>
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg py-2">
        <a type="button" class="btn w-100 btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editovat</a>
    </div>
    <div class="col-sm-12 col-md-6 col-lg py-2">
        <a type="button" class="btn w-100 btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Odstranit</a>
    </div>
    <div class="col-sm-12 col-md-6 col-lg py-2">
        <a type="button" class="btn w-100 btn-success text-nowrap" asp-area="" asp-controller="Insurances" asp-action="Create">Nové pojištění</a>
    </div>
</div>

<div class="row">

    <table class="table col">
        <thead>
            <tr>
                <th>
                    Pojištění
                </th>
                <th>
                    Platnost
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.Insurances)
            {
                <tr>
                    <td>
                        <a asp-controller="Insurances" asp-action="Details" asp-route-id="@item.Id">@item.TypeInsurance</a>                        
                    </td>
                    <td>
                        @item.ValidFrom.ToString("dd.MM.yyyy") - @item.ValidUntil.ToString("dd.MM.yyyy")
                    </td>
                    <td>
                        <a class="btn button btn-warning" asp-controller="Insurances" asp-action="Edit" asp-route-id="@item.Id">Editovat</a>
                        <a class="btn button btn-danger" asp-controller="Insurances" asp-action="Delete" asp-route-id="@item.Id">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

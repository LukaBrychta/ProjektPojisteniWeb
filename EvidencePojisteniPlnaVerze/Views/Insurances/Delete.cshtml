@model EvidencePojisteniPlnaVerze.Models.Insurance

@{
    ViewData["Title"] = "Delete";
}

<h1>Opravdu chcete odstranit @Html.DisplayNameFor(model => model.TypeInsurance): @Html.DisplayFor(model => model.TypeInsurance)?</h1>

<hr />
<div>
    <dl class="row">
        <div class="col-6">
            <dt>
                Pojištěná osoba:
            </dt>
            <dd>
                <a asp-area="" asp-controller="Insureds" asp-action="Details" asp-route-id="@Model.InsuredId">@Html.DisplayFor(model => model.insured.FirstName) @Html.DisplayFor(model => model.insured.LastName)</a>
            </dd>
        </div>
        <div class="col-6">
            <dt>
                @Html.DisplayNameFor(model => model.SubjectInsurance):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SubjectInsurance)
            </dd>
        </div>
        <div class="col-6">
            <dt>
                @Html.DisplayNameFor(model => model.ValidFrom):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ValidFrom)
            </dd>
        </div>
        <div class="col-6">
            <dt>
                @Html.DisplayNameFor(model => model.ValidUntil):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ValidUntil)
            </dd>
        </div>
        <div class="col-6">
            <dt>
                @Html.DisplayNameFor(model => model.Amount):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </div>
    </dl>
</div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4 py-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Odstranit" class="btn btn-danger w-100" />
            </form>
        </div>
    </div>
